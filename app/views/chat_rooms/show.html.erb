<h1><%= @chat_room.title %></h1>

<div id="messages" data-chat_room_id="<%= @chat_room.id %>">
	<% @chat_room.messages do |msg| %>
		<%= render partial: 'messages/list', locals: { msg: msg } %>
	<% end %>
</div>

<%= simple_form_for @message, url: '#' do |f| %>
	<div class="form-group">
		<%= f.input :body, label: false, input_html: { class: 'form-control', rows: 6 } %>
		<small class="text-muted">From 2 to 1000 characters</small>
	</div>

	<div class="form-actions">
		<%= f.submit "Post", class: 'btn btn-primary btn-lg' %>
	</div>
<% end %>